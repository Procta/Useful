###########
# Company #
###########

# alias company="source ~/Envs/company/bin/activate; cd ~/kandji/company/kandji-backend-company-app;"
alias company='
   clear;
   source ~/Envs/company/bin/activate;
   cd ~/kandji/company/kandji-web; git pull;
   cd ~/kandji/company/kandji-backend-company-app; git pull;
   pip install --upgrade pip; pip install -r requirements.txt;
'

alias company-web='
   clear;
   source ~/Envs/company/bin/activate;
   cd ~/kandji/company/kandji-backend-company-app; git pull;
   pip install --upgrade pip; pip install -r requirements.txt;
   cd ~/kandji/company/kandji-web; git pull;
'

